package graph;

import java.util.Iterator;
import java.util.LinkedList;

public class BFS {
	int V;
	LinkedList<Integer> adj[];
	
	public BFS(int V) {
		this.V = V;
		for(int i=0;i<V;++i)
		{
			adj[i] = new LinkedList<>();
		}
	}
	
	void addEdge(int u,int v)
	{
		adj[u].add(v);
	}
	
	void trackBFS(int start)
	{
		boolean[] check = new boolean[V];
		LinkedList<Integer> queue = new LinkedList<>();
		queue.add(start);
		check[start]=true;
		while(!queue.isEmpty())
		{
			int temp = queue.poll();
			System.out.print(temp+" ");
			Iterator<Integer> i = adj[temp].iterator();
			while(i.hasNext())
			{
				int a = i.next();
				if(!check[a])
				{
					queue.add(a);
					check[a] = true;
				}	
			}
		}
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		BFS bfs = new BFS(4);
		bfs.addEdge(0, 1);
		bfs.addEdge(0, 2);
		bfs.addEdge(1, 2);
		bfs.addEdge(2, 0);
		bfs.addEdge(2, 3);
		bfs.addEdge(3, 3);
		bfs.trackBFS(0);
	}
	
	
}
