package JanuaryChallenge2017;

import java.util.Scanner;

public class Daulat {
	

	public static void main(String[] args) {
	
		Scanner sc = new Scanner(System.in);
		//System.out.println(Integer.MAX_VALUE);
		int test = sc.nextInt();
		for(int tt=0;tt<test;tt++)
		{
			int f0 = sc.nextInt();
			int f1 = sc.nextInt();
			int N = sc.nextInt();
			for(int i=2;i<=N;i++)
			{
				int temp = f1;
				f1 = f0+f1+f0*f1;
				f0=temp;
			}
			f1 = f1%(1000000000+7);
			System.out.println(f1);
		}
	}

}
